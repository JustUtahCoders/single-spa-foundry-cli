{
  "name": "@baseplate-sdk/cli",
  "version": "2.0.0",
  "description": "Deployment CLI for Baseplate",
  "type": "module",
  "main": "lib/js-api.js",
  "bin": {
    "baseplate": "lib/cli.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "cli": "cross-env NODE_OPTIONS=\"--import ./register-loaders.js --experimental-specifier-resolution=node --experimental-fetch\" node src/cli.ts",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "lint": "eslint \"src/**/*\"",
    "build": "rimraf lib && tsc && fix-esm-import-path lib",
    "prepublishOnly": "pnpm run build",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "types": "lib/js-api.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ConvexCooperative/baseplate-cli.git"
  },
  "author": "Joel Denning",
  "license": "See LICENSE file",
  "bugs": {
    "url": "https://github.com/ConvexCooperative/baseplate-cli/issues"
  },
  "homepage": "https://github.com/ConvexCooperative/baseplate-cli#readme",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@node-loader/babel": "^2.1.0",
    "@node-loader/extensionless": "^1.1.1",
    "@types/jest": "^29.5.11",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-ts-important-stuff": "^1.1.0",
    "fix-esm-import-path": "^1.5.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "lint-staged": "^15.2.0",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.2",
    "prettier": "^3.2.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@baseplate-sdk/utils": "^3.2.1",
    "@baseplate-sdk/web-app": "^5.0.0",
    "@types/node": "^20.11.3",
    "@types/yargs": "^17.0.32",
    "uuid": "^9.0.1"
  },
  "lint-staged": {
    "*": "prettier --write"
  }
}
